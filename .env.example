# =================================
# Smart.md E2E Testing Framework
# Environment Configuration
# =================================

# Base URL
BASE_URL=https://smart.md

# Browser Settings
HEADLESS=false
SLOW_MO=50

# Anti-Detection Settings
HUMAN_LIKE_MODE=true
RANDOM_DELAYS=true
MIN_TYPING_DELAY=50
MAX_TYPING_DELAY=200

# Session Persistence
SAVE_COOKIES=true
COOKIES_PATH=auth/cookies.json

# Timeouts (milliseconds)
DEFAULT_TIMEOUT=60000
ACTION_TIMEOUT=15000
NAVIGATION_TIMEOUT=30000

# Allure Reporting
ALLURE_RESULTS_DIR=allure-results
ALLURE_REPORT_DIR=allure-report

# CI/CD
CI=false

# Debug Mode
DEBUG=false
VERBOSE_LOGGING=false

# Screenshot/Video
SCREENSHOT_ON_FAILURE=true
VIDEO_RECORDING=on

# Moldova Localization
LOCALE=ro-MD
TIMEZONE=Europe/Chisinau

# =================================
# API Throttling Configuration
# =================================

# Profile: stealth, normal, fast, burst
API_PROFILE=stealth

# Base URL for API requests
API_BASE_URL=https://smart.md

# Request timeout (milliseconds)
API_REQUEST_TIMEOUT=30000

# Maximum retry attempts
API_MAX_RETRIES=3

# Enable verbose request logging
API_LOG_REQUESTS=true

# Disable delays (for unit tests only)
DISABLE_API_DELAYS=false
