{
  "name": "smart-md-demo",
  "version": "1.0.0",
  "description": "Enterprise Smoke Testing Framework for Smart.md - Moldova's largest electronics aggregator",
  "main": "index.js",
  "scripts": {
    "test": "cucumber-js --config cucumber.config.js",
    "test:smoke": "cucumber-js --config cucumber.config.js --profile smoke",
    "test:critical": "cucumber-js --config cucumber.config.js --profile critical",
    "test:mobile": "cucumber-js --config cucumber.config.js --profile mobile",
    "test:mobile:ios": "cucumber-js --config cucumber.config.js --profile mobile_ios",
    "test:mobile:android": "cucumber-js --config cucumber.config.js --profile mobile_android",
    "test:mobile:all": "npm run test:mobile:ios && npm run test:mobile:android",
    "test:e2e": "cucumber-js --config cucumber.config.js --profile e2e",
    "test:parallel": "cucumber-js --config cucumber.config.js --profile parallel",
    "test:headed": "HEADLESS=false cucumber-js --config cucumber.config.js",
    "test:debug": "DEBUG=cucumber* cucumber-js --config cucumber.config.js",
    "test:api": "API_PROFILE=stealth npx playwright test tests/api/specs --project=api",
    "test:api:smoke": "API_PROFILE=stealth npx playwright test tests/api/specs --project=api --grep @smoke",
    "test:api:normal": "API_PROFILE=normal npx playwright test tests/api/specs --project=api",
    "test:api:fast": "API_PROFILE=fast npx playwright test tests/api/specs --project=api",
    "test:api:ci": "API_PROFILE=burst npx playwright test tests/api/specs --project=api",
    "test:bdd:api": "cucumber-js --config cucumber-api.config.js",
    "test:bdd:api:smoke": "cucumber-js --config cucumber-api.config.js --profile smoke",
    "test:bdd:api:ci": "cucumber-js --config cucumber-api.config.js --profile ci",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "allure:serve": "allure serve allure-results",
    "report": "npm run allure:generate && npm run allure:open",
    "clean": "rimraf allure-results allure-report reports",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "typecheck": "tsc --noEmit",
    "prepare": "husky install"
  },
  "keywords": [
    "playwright",
    "cucumber",
    "bdd",
    "e2e",
    "testing",
    "smart.md",
    "moldova",
    "automation"
  ],
  "author": "QA Automation Team",
  "license": "MIT",
  "devDependencies": {
    "@cucumber/cucumber": "^10.0.1",
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "allure-cucumberjs": "^2.9.2",
    "allure-playwright": "^3.4.3",
    "dotenv": "^16.3.1",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
